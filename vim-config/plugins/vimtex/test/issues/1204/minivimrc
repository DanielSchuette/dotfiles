set nocompatible
let &rtp = '../../..,' . &rtp
let &rtp .= ',../../../after'
filetype plugin indent on
syntax enable

set shiftwidth=2
set tabstop=2
set expandtab
set list
set listchars=tab:â–¸\ ,nbsp:%

nnoremap q :qall!<cr>
nnoremap <space>t :call g:timer.toggle()<cr>

let g:timer = {}
function! g:timer.toggle() abort
  if has_key(self, 't')
    call timer_stop(self.t)
    unlet! self.t
  else
    let self.t = timer_start(1000, 'Refresh', {'repeat': -1})
  endif
endfunction

function! Refresh(time) abort
  silent! VimtexReload
  silent! normal! ma
  silent! normal! gg=G
  silent! normal! `a
  silent! normal! ==
endfunction

silent edit indent.tex
call g:timer.toggle()
