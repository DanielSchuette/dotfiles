set nocompatible
let &rtp = '../../..,' . &rtp
filetype plugin indent on
syntax enable

nnoremap q :qall!<cr>

let g:tex_flavor = 'latex'

let g:vimtex_view_automatic = 0
let g:vimtex_compiler_latexmk = { 'build_dir'  : 'log' }
if has('nvim')
  let g:vimtex_compiler_progname = 'nvr'
endif

lcd chapters
silent edit chap1.tex
