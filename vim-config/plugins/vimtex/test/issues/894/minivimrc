set nocompatible
let &rtp = '../../..,' . &rtp
let &rtp .= ',../../../after'
filetype plugin indent on
syntax enable

nnoremap q :qall!<cr>

let s:file = expand('<sfile>')
execute 'nnoremap <silent> <space>r :source' s:file "\<cr>"

let g:tex_flavor = 'latex'

if has('vim_starting')
  silent edit minimal.tex
endif
